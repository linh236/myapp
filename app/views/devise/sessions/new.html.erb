<div class="container login">
  <h2 class="text-center pt-4"><%= t("devise.title_login")%></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label I18n.t("devise.email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

    <div class="field">
      <%= f.label I18n.t("devise.password") %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label I18n.t("devise.remember")  %>
      </div>
    <% end %>

    <div class="actions text-center border-btn">
      <%= f.submit "#{I18n.t("devise.btn_login")}", class: "btn btn-primary text-center mb-4" %>
    </div>
  <% end %>
</div>
