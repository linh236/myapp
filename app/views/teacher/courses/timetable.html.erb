<%= month_calendar  do |date| %>
  <%= format_month_day(date) %>
  <% @timetables.each do |timetable| %>
    <% if take_datetime(date.inspect) == take_datetime(timetable.start.inspect) %>
      <div>
        <a href="/teacher/places?date=<%= date %>&id=<%= timetable.id%>"><%= timetable.subject.subject_name%> (<%= timetable.lesson.lesson_name%> - <%= timetable.room.room_name%>)</a>
      </div>
    <% end %>
  <% end %>
<% end %>
<% @timetables.each do |timetable| %>
  <i class="fa fa-download text-dark h3" aria-hidden="true">
    <%= link_to "CSV", teacher_export_path(format: "csv", id: timetable.id) %> <%= timetable.subject.subject_name%>
  </i>
  <br>
<% end %>
