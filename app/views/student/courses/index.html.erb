<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th class="text-center">Subject</th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr class="courses subject">
        <td class="text-center cursor-pointer sub_subject"><%= link_to subject.subject_name, "/student/courses/#{subject.id}"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- -------------------------------------------------- -->
<% unless @register_courses.empty?%>
<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th class="text-center"><%= t("student.course.code")%></th>
      <th class="text-center"><%= t("student.course.subject")%></th>
      <th class="text-center"><%= t("student.course.start")%></th>
      <th class="text-center"><%= t("student.course.end")%></th>
    </tr>
  </thead>
  <tbody>
    <% @register_courses.each do |register| %>
    <tr class="registers">
      <td class="text-center pt-4"><%= register.course.code %></td>
      <td class="text-center pt-4"><%= register.course.subject.subject_name %></td>
      <td class="text-center pt-4"><%= register.course.start %></td>
      <td class="text-center pt-4"><%= register.course.end %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th class="text-center"><%= t("student.course.code")%></th>
      <th class="text-center"><%= t("student.course.subject")%></th>
      <th class="text-center"><%= t("student.course.start")%></th>
      <th class="text-center"><%= t("student.course.end")%></th>
    </tr>
  </tfoot>
</table>
<% end %>
<%= stylesheet_link_tag    '/assets/courses'%>
