<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th class="text-center"><%= t("student.course.subject")%></th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
    <tr class="courses subject">
      <td class="text-center pt-3 cursor-pointer sub_subject"><%= link_to subject.subject_name, "/student/courses/#{subject.id}"%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<!-- -------------------------------------------------- -->
<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th class="text-center"><%= t("student.course.code")%></th>
      <th class="text-center"><%= t("student.course.subject")%></th>
      <th class="text-center"><%= t("student.course.teacher")%></th>
      <th class="text-center"><%= t("student.course.start")%></th>
      <th class="text-center"><%= t("student.course.end")%></th>
      <th class="text-center"><%= t("student.course.total")%></th>
      <th class="text-center"></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
    <tr class="courses">
      <td class="text-center pt-4"><%= course.code %></td>
      <td class="text-center pt-4"><%= course.subject.subject_name %></td>
      <td class="text-center pt-4"><%= course.people.person_name %></td>
      <td class="text-center pt-4"><%= course.start %></td>
      <td class="text-center pt-4"><%= course.end %></td>
      <td class="text-center pt-4"><%= @count_register_course %><%= amount_course(@count_course) %>/<%= course.total %></td>
      <td class="text-center">
        <button type="button" data-user = "<%= course.people_id%>" data-id = "<%= course.id %>" name="button" class="btn btn-primary register"><%= t("student.course.register") %></button>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th class="text-center"><%= t("student.course.code")%></th>
      <th class="text-center"><%= t("student.course.subject")%></th>
      <th class="text-center"><%= t("student.course.teacher")%></th>
      <th class="text-center"><%= t("student.course.start")%></th>
      <th class="text-center"><%= t("student.course.end")%></th>
      <th class="text-center"><%= t("student.course.total")%></th>
      <th class="text-center"></th>
    </tr>
  </tfoot>
</table>
