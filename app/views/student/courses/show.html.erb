<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th class="text-center">Subject</th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
    <tr class="courses subject">
      <td class="text-center pt-3 cursor-pointer sub_subject"><%= link_to subject.subject_name, "/student/courses/#{subject.id}"%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<!-- -------------------------------------------------- -->
<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th class="text-center">Code</th>
      <th class="text-center">Subject</th>
      <th class="text-center">Teacher</th>
      <th class="text-center">Start</th>
      <th class="text-center">End</th>
      <th class="text-center">Total</th>
      <th class="text-center"></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
    <tr class="courses">
      <td class="text-center pt-4"><%= course.code %></td>
      <td class="text-center pt-4"><%= course.subject.subject_name %></td>
      <td class="text-center pt-4"><%= course.people.person_name %></td>
      <td class="text-center pt-4"><%= course.start %></td>
      <td class="text-center pt-4"><%= course.end %></td>
      <td class="text-center pt-4"><%= @count_register_course %>/<%= course.total %></td>
      <td class="text-center">
        <button type="button" data-user = "<%= course.people_id%>" data-id = "<%= course.id %>" name="button" class="btn btn-primary register">Register</button>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th class="text-center">Code</th>
      <th class="text-center">Subject</th>
      <th class="text-center">Teacher</th>
      <th class="text-center">Start</th>
      <th class="text-center">End</th>
      <th class="text-center">Total</th>
      <th class="text-center"></th>
    </tr>
  </tfoot>
</table>
<!-- ----------------------------------------------->
<% unless @register_courses.empty?%>
<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th class="text-center">Code</th>
      <th class="text-center">Subject</th>
      <th class="text-center">Start</th>
      <th class="text-center">End</th>
    </tr>
  </thead>
  <tbody>
    <% @register_courses.each do |register| %>
    <tr class="registers">
      <td class="text-center pt-4"><%= register.course.code %></td>
      <td class="text-center pt-4"><%= register.course.subject.subject_name %></td>
      <td class="text-center pt-4"><%= register.course.start %></td>
      <td class="text-center pt-4"><%= register.course.end %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th class="text-center">Code</th>
      <th class="text-center">Subject</th>
      <th class="text-center">Start</th>
      <th class="text-center">End</th>
    </tr>
  </tfoot>
</table>
<% end %>
<%= stylesheet_link_tag    '/assets/courses'%>
