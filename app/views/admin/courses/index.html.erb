<h2>Create new course</h2>

<%= form_tag admin_courses_path do %>

  <div class="field">
    <%= label_tag(:q, "Code") %><br />
     <%= text_field("course", "code", class: "form-control")%>
  </div>
  <div class="field">
    <%= label_tag(:q, "Subject") %><br />
     <%= select("course", "subject_id", @subjects.collect {|p| [ p.subject_name, p.id ] }, { include_blank: " Select " }, class: "form-control")%>
  </div>
  <div class="field">
    <%= label_tag(:q, "Teacher") %><br />
     <%= select("course", "people_id" , @users.collect {|p| [ p.person_name, p.id] }, { include_blank: "Select" }, class: "form-control")%>
  </div>
  <div class="field">
    <%= label_tag(:q, "Start") %><br />
    <%= date_field("course", "start", class: "form-control") %>
  </div>
  <div class="field">
    <%= label_tag(:q, "End") %><br />
    <%= date_field("course","end", class: "form-control") %>
  </div>
  <div class="field">
    <%= label_tag(:q, "Total") %><br />
     <%= number_field("course", "total", class: "form-control")%>
  </div>
  <div class="actions">
    <%= submit_tag "Create", class: "btn btn-primary" %>
  </div>
<% end %>
<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Code</th>
      <th>Subject</th>
      <th>Start</th>
      <th>End</th>
      <th>Teacher</th>
      <th>Total</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
    <tr data-id = "<%= course.id %>" class="user">
      <td><%= course.code %></td>
      <td><%= course.subject.subject_name %></td>
      <td><%= course.start %></td>
      <td><%= course.end %></td>
      <td><%= course.people.person_name %></td>
      <td><%= course.total %></td>
      <td>
        <button type="button" name="button">Edit</button>
        <button type="button" name="button">Delete</button>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>Code</th>
      <th>Subject</th>
      <th>Start</th>
      <th>End</th>
      <th>Teacher</th>
      <th>Total<th>
      <th></th>
    </tr>
  </tfoot>
</table>
