<h2>Create new course</h2>

<%= form_tag admin_subjects_path do %>

  <div class="field">
    <%= label_tag(:q, "Subject") %><br />
    <%= text_field(:subject_name, params[:subject_name], class: "form-control") %>
  </div>
  <div class="field">
    <%= label_tag(:q, "Start") %><br />
    <%= date_field(:start, params[:start], class: "form-control") %>
  </div>
  <div class="field">
    <%= label_tag(:q, "End") %><br />
    <%= date_field(:end, params[:end], class: "form-control") %>
  </div>
  <div class="actions">
    <%= submit_tag "Create", class: "btn btn-primary" %>
  </div>
<% end %>
<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Student code</th>
        <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
    <tr data-id = "<%= subject.id %>" class="user">
      <td><%= subject.subject_name %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Student code</th>
      <th>Role</th>
    </tr>
  </tfoot>
</table>
