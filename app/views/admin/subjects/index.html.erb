<h2><%= t("admin.subject.title")%></h2>

<%= form_tag admin_subjects_path do %>

  <div class="field">
    <%= label_tag(:q, "#{I18n.t("admin.subject.name")}") %><br />
    <%= text_field(:subject_name, params[:subject_name], class: "form-control") %>
  </div>
  <div class="actions text-center">
    <%= submit_tag "#{I18n.t("admin.subject.add")}", class: "btn btn-primary" %>
  </div>
<% end %>
<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th><%= t("layout.id")%></th>
      <th><%= t("admin.subject.name")%></th>
    </tr>
  </thead>
  <tbody>
    <% i = 0 %>
    <% @subjects.each do |subject| %>
    <tr data-id = "<%= subject.id %>" class="user">
      <td><%= i += 1 %></td>
      <td><%= subject.subject_name %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th><%= t("layout.id")%></th>
      <th><%= t("admin.subject.name")%></th>
    </tr>
  </tfoot>
</table>
